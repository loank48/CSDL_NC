<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Color</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <a href="/mausac"><h3>Color Page</h3></a>
        <h2>UPDATE COLOR</h2>
        <form action="/mausac/<%= color._id %>" method="POST">
            <div class="form-group">
                <label>Color ID</label>
                <input class="form-control" type="text" name='MaMau' value="<%= color.MaMau %>">
            </div>
            <div class="form-group">
                <label>Color Name</label>
                <input class="form-control" type="text" name='TenMau' value="<%= color.TenMau %>">
            </div>
            <input id="update-btn" class="btn btn-primary" type="submit" value="SAVE">
            <input id="delete-btn" class="btn btn-secondary" type="button" value="DELETE"
                onclick="handleDeleteColor('<%= color._id %>')">
        </form>
    </div>
    <script>
        function handleDeleteColor(value) {
            $.ajax({
                url: '/mausac/' + value,
                type: 'DELETE',
                success: function (result) {
                    $(location).attr('href', '/');
                }
            })
        }
    </script>
</body>
</html>

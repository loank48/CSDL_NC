<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Order</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <a href="/donhang"><h3>Order Page</h3></a>
        <h2>UPDATE ORDER</h2>
        <form action="/donhang/<%= order.MaKH %>" method="POST">
            <div class="form-group">
                <label>Customer ID</label>
                <input class="form-control" type="text" name='MaKH' value="<%= order.MaKH %>">
            </div>
            <div class="form-group">
                <label>Product ID</label>
                <input class="form-control" type="text" name='MaSP' value="<%= order.MaSP %>">
            </div>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" type="date" name='NgayLap' value="<%= order.NgayLap %>">
            </div>
            <div class="form-group">
                <label>Total Amount</label>
                <input class="form-control" type="number" name='ThanhTien' value="<%= order.ThanhTien %>">
            </div>
            <input id="update-btn" class="btn btn-primary" type="submit" value="SAVE">
            <input id="delete-btn" class="btn btn-secondary" type="button" value="DELETE"
                onclick="handleDeleteOrder('<%= order.MaKH %>')">
        </form>
    </div>
    <script>
        function handleDeleteOrder(value) {
            $.ajax({
                url: '/donhang/' + value,
                type: 'DELETE',
                success: function (result) {
                    $(location).attr('href', '/donhang');
                }
            })
        }
    </script>
</body>
</html>

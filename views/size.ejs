<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sizes</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Size Manager</h2>
        <a href="size/add-size" class="btn btn-success float-right">Add Size</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Size ID</th>
                    <th>Size Name</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <% sizes.forEach((entry) => { %>
            <tr ondblclick="handleUpdateSize('<%= entry._id %>')">
                <td><%= entry.MaSize %></td>
                <td><%= entry.TenSize %></td>
                <td>
                    <input class="btn btn-primary" type="button" value="Update"
                        onclick="handleUpdateSize('<%= entry._id %>')">
                </td>
            </tr>
            <% }) %>
        </table>
        <script>
            function handleUpdateSize(value) {
                $(location).attr('href', 'size/update-size/' + value);
            }
        </script>
    </div>
</body>
</html>

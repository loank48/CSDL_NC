<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Comment</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <a href="/binhluan"><h3>Comment page</h3></a>
        <h2>UPDATE COMMENT</h2>
        <form action="/binhluan/<%= comment._id %>" method="POST">
            <div class="form-group">
                <label>Comment ID</label>
                <input class="form-control" type="text" name='MaBL' value="<%= comment.MaBL %>" disabled>
            </div>
            <div class="form-group">
                <label>Content</label>
                <input class="form-control" type="text" name='NoiDung' value="<%= comment.NoiDung %>">
            </div>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" type="text" name='NgayDang' value="<%= comment.NgayDang %>">
            </div>
            <div class="form-group">
                <label>Product ID</label>
                <input class="form-control" type="text" name='MaSP' value="<%= comment.MaSP %>">
            </div>
            <div class="form-group">
                <label>Customer ID</label>
                <input class="form-control" type="text" name='MaKH' value="<%= comment.MaKH %>">
            </div>
            <input id="update-btn" class="btn btn-primary" type="submit" value="SAVE">
            <input id="delete-btn" class="btn btn-secondary" type="button" value="DELETE"
                onclick="handleDeleteComment('<%= comment._id %>')">
        </form>
    </div>
    <script>
        function handleDeleteComment(value) {
            $.ajax({
                url: '/binhluan/' + value,
                type: 'DELETE',
                success: function (result) {
                    $(location).attr('href', '/');
                }
            })
        }
    </script>
</body>
</html>
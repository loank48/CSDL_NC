<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stores</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Store Manager</h2>
        <a href="/cuahang/add-store" class="btn btn-success float-right">Add Store</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Store ID</th>
                    <th>Store Name</th>
                    <th>Number of Staffs</th>
                    <th>Address</th>
                    <th>Supplier ID</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <% stores.forEach((entry,key) => { %>
            <tr ondblclick="handleUpdateStore('<%= entry.MaCH %>')">
                <td><%= entry.MaCH %></td>
                <td><%= entry.TenCH %></td>
                <td><%= entry.TongNV %></td>
                <td><%= entry.SoNha %>, <%= entry.Duong %>, Q<%= entry.Quan %>, <%= entry.ThanhPho %></td>
                <td><%= entry.MaNCC %></td>
                <td>
                    <input class="btn btn-primary" type="button" value="Update"
                        onclick="handleUpdateStore('<%= entry.MaCH %>')">
                </td>
            </tr>
            <% }) %>
        </table>
        <script>
            function handleUpdateStore(value) {
                $(location).attr('href', 'cuahang/update/' + value);
            }
        </script>
    </div>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Material</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <a href="/chatlieu">
            <h3>Material Page</h3>
        </a>
        <h2>UPDATE MATERIAL</h2>
        <form action="/chatlieu/<%= material._id %>" method="POST">
            <div class="form-group">
                <label>Material ID</label>
                <input class="form-control" type="text" name='MaChatLieu' value="<%= material.MaChatLieu %>" disabled>
            </div>
            <div class="form-group">
                <label>Material Name</label>
                <input class="form-control" type="text" name='TenChatLieu' value="<%= material.TenChatLieu %>">
            </div>
            <div class="form-group">
                <label>Description</label>
                <input class="form-control" type="text" name='MoTa' value="<%= material.MoTa %>">
            </div>
            <input id="update-btn" class="btn btn-primary" type="submit" value="SAVE">
            <input id="update-btn" class="btn btn-secondary" type="button" value="DELETE"
                onclick="handleDeleteMaterial('<%= material._id %>')">
        </form>
    </div>
    <script>
        function handleDeleteMaterial(value) {
            $.ajax({
                url: '/' + value,
                type: 'DELETE',
                success: function (result) {
                    $(location).attr('href', '/');
                }
            })
        }
    </script>
</body>
</html>

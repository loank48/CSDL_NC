<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Colors</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Color Manager</h2>
        <a href="mausac/add-color" class="btn btn-success float-right">Add Color</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Color ID</th>
                    <th>Color Name</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <% colors.forEach((entry) => { %>
            <tr ondblclick="handleUpdateColor('<%= entry._id %>')">
                <td><%= entry.MaMau %></td>
                <td><%= entry.TenMau %></td>
                <td>
                    <input class="btn btn-primary" type="button" value="Update"
                        onclick="handleUpdateColor('<%= entry._id %>')">
                </td>
            </tr>
            <% }) %>
        </table>
        <script>
            function handleUpdateColor(value) {
                $(location).attr('href', 'color/update-color/' + value);
            }
        </script>
    </div>
</body>
</html>

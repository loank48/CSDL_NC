<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Staff</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <a href="/nhanvien"><h3>Staff Page</h3></a>
        <h2>UPDATE STAFF</h2>
        <form action="/nhanvien/update/<%= staff.MaNV %>" method="POST">
            <div class="form-group">
                <label>Staff ID</label>
                <input class="form-control" type="text" name='MaNV' value="<%= staff.MaNV %>">
            </div>
            <div class="form-group">
                <label>Staff Name</label>
                <input class="form-control" type="text" name='TenNV' value="<%= staff.TenKH %>">
            </div>
            <div class="form-group">
                <label>Date of Birth</label>
                <input class="form-control" type="date" name='NgaySinh' value="<%= staff.NgaySinh %>">
            </div>
            <div class="form-group">
                <label>Gender</label>
                <input class="form-control" type="text" name='GioiTinh' value="<%= staff.GioiTinh %>">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" name='Email' value="<%= staff.Email %>">
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input class="form-control" type="number" name='SDT' value="<%= staff.SDT %>">
            </div>
            <div class="form-group">
                <label>Number Address</label>
                <input class="form-control" type="text" name='SoNha' value="<%= staff.SoNha %>">
            </div>
            <div class="form-group">
                <label>Street</label>
                <input class="form-control" type="text" name='Duong' value="<%= staff.Duong %>">
            </div>
            <div class="form-group">
                <label>District</label>
                <input class="form-control" type="text" name='Quan' value="<%= staff.Quan %>">
            </div>
            <div class="form-group">
                <label>City</label>
                <input class="form-control" type="text" name='ThanhPho' value="<%= staff.ThanhPho %>">
            </div>
            <div class="form-group">
                <label>Store ID</label>
                <input class="form-control" type="text" name='MaCH' value="<%= staff.MaCH %>">
            </div>
            <input id="update-btn" class="btn btn-primary" type="submit" value="SAVE">
            <input id="delete-btn" class="btn btn-secondary" type="button" value="DELETE"
                onclick="handleDeleteStaff('<%= staff.MaNV %>')">
        </form>
    </div>
    <script>
        function handleDeleteStaff(value) {
            $.ajax({
                url: '/nhanvien/' + value,
                type: 'DELETE',
                success: function (result) {
                    $(location).attr('href', '/');
                }
            })
        }
    </script>
</body>
</html>

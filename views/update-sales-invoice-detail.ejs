<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Sales Invoice Detail</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <a href="/chitiethoadonban"><h3>Sales Invoice Detail Page</h3></a>
        <h2>UPDATE SALES INVOICE DETAIL</h2>
        <form action="/chitiethoadonban/<%= salesInvoiceDetail._id %>" method="POST">
            <div class="form-group">
                <label>Sales Invoice ID</label>
                <input class="form-control" type="text" name='MaHDB' value="<%= salesInvoiceDetail.MaHDB %>">
            </div>
            <div class="form-group">
                <label>Product ID</label>
                <input class="form-control" type="text" name='MaSP' value="<%= salesInvoiceDetail.MaSP %>">
            </div>
            <div class="form-group">
                <label>Quantity</label>
                <input class="form-control" type="number" name='SoLuongBan' value="<%= salesInvoiceDetail.SoLuongBan %>">
            </div>
            <div class="form-group">
                <label>Price</label>
                <input class="form-control" type="number" name='DonGiaBan' value="<%= salesInvoiceDetail.DonGiaBan %>">
            </div>
            <div class="form-group">
                <label>Discount</label>
                <input class="form-control" type="text" name='GiamGia' value="<%= salesInvoiceDetail.GiamGia %>">
            </div>
            <input id="update-btn" class="btn btn-primary" type="submit" value="SAVE">
            <input id="delete-btn" class="btn btn-secondary" type="button" value="DELETE"
                onclick="handleDeleteSalesInvoiceDetail('<%= salesInvoiceDetail._id %>')">
        </form>
    </div>
    <script>
        function handleDeleteSalesInvoiceDetail(value) {
            $.ajax({
                url: '/chitiethoadonban/' + value,
                type: 'DELETE',
                success: function (result) {
                    $(location).attr('href', '/');
                }
            })
        }
    </script>
</body>
</html>

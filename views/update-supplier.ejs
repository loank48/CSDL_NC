<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Supplier</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <a href="/nhacungcap"><h3>Supplier Page</h3></a>
        <h2>UPDATE SUPPLIER</h2>
        <form action="/nhacungcap/<%= supplier._id %>" method="POST">
            <div class="form-group">
                <label>Supplier ID</label>
                <input class="form-control" type="text" name='MaNCC' value="<%= supplier.MaNCC %>">
            </div>
            <div class="form-group">
                <label>Supplier Name</label>
                <input class="form-control" type="text" name='TenNCC' value="<%= supplier.TenNCC %>">
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input class="form-control" type="number" name='SDT' value="<%= supplier.SDT %>">
            </div>
            <div class="form-group">
                <label>Address</label>
                <input class="form-control" type="text" name='DiaChi' value="<%= supplier.DiaChi %>">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" name='Email' value="<%= supplier.Email %>">
            </div>
            <input id="update-btn" class="btn btn-primary" type="submit" value="SAVE">
            <input id="delete-btn" class="btn btn-secondary" type="button" value="DELETE"
                onclick="handleDeleteSupplier('<%= supplier._id %>')">
        </form>
    </div>
    <script>
        function handleDeleteSupplier(value) {
            $.ajax({
                url: '/nhacungcap/' + value,
                type: 'DELETE',
                success: function (result) {
                    $(location).attr('href', '/');
                }
            })
        }
    </script>
</body>
</html>

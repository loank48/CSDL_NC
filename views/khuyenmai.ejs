<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Discounts</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Discounts Manager</h2>
        <a href="khuyenmai/add-discount" class="btn btn-success float-right">Add Discount</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Discount ID</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Content</th>
                    <th>Product ID</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <% discounts.forEach((entry) => { %>
            <tr ondblclick="handleUpdateDiscount('<%= entry._id %>')">
                <td><%= entry.MaKM %></td>
                <td><%= entry.TGBatDau %></td>
                <td><%= entry.TGKetThuc %></td>
                <td><%= entry.NoiDung %></td>
                <td><%= entry.MaSP %></td>
                <td>
                    <input class="btn btn-primary" type="button" value="Update"
                        onclick="handleUpdateDiscount('<%= entry._id %>')">
                </td>
            </tr>
            <% }) %>
        </table>
        <script>
            function handleUpdateDiscount(value) {
                $(location).attr('href', 'discount/update-discount/' + value);
            }
        </script>
    </div>
</body>
</html>

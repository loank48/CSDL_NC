<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Manager</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Image Manager</h2>
        <a href="/anh/add-image" class="btn btn-success float-right">Add Image</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <% images.forEach((entry) => { %>
            <tr ondblclick="handleUpdateImage('<%= entry._id %>')">
                <td><img src="<%= entry.Url %>" alt="<%= entry.MoTa %>" style="max-width: 100px;"/></td>
                <td><%= entry.MoTa %></td>
                <td>
                    <input class="btn btn-primary" type="button" value="Update"
                        onclick="handleUpdateImage('<%= entry._id %>')">
                </td>
            </tr>
            <% }) %>
        </table>
        <script>
            function handleUpdateImage(value) {
                $(location).attr('href', '/anh/update-image/' + value);
            }
        </script>
    </div>
</body>
</html>
